{
  "name": "vab",
  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "VARIANT": "1.19.0",
      "USERNAME": "vscode"
    }
  },
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt",
    "seccomp=unconfined"
  ],
  "remoteUser": "vscode",
  "settings": {
    "files.trimTrailingWhitespace": false,
    "editor.formatOnSave": true
  },
  "extensions": [
    "editorconfig.editorconfig",
    "golang.go",
    "redhat.vscode-yaml",
    "davidanson.vscode-markdownlint"
  ],
  "postCreateCommand": "make install-dep"
}
